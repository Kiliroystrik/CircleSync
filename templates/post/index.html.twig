{% extends 'base.html.twig' %}

{% block title %}Post index
{% endblock %}

{% block body %}
	<div class="max-w-7xl mx-auto sm:px-6 lg:px-8 py-8">
		<div class="bg-white overflow-hidden shadow-xl sm:rounded-lg">
			<div class="px-4 py-5 sm:p-6">
				<h1 class="text-3xl font-bold mb-4">Mes publications</h1>
				<table class="min-w-full divide-y divide-gray-200">
					<thead>
						<tr>
							<th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date de publication</th>
							<th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Contenu</th>
							<th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nombre de likes</th>
							<th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
						</tr>
					</thead>
					<tbody class="bg-white divide-y divide-gray-200">
						{% for post in posts %}
							<tr>
								<td class="px-6 py-4 whitespace-nowrap">{{ post.publicationDate ? post.publicationDate|date('d/m/Y H:i:s') : '' }}</td>
								<td class="px-6 py-4 whitespace-nowrap">{{ post.content }}</td>
								<td class="px-6 py-4 whitespace-nowrap">{{ post.nbrLikes }}</td>
								<td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
									<a href="{{ path('app_post_show', {'id': post.id}) }}" class="text-blue-600 hover:text-blue-500 mr-2">Voir</a>
									<a href="{{ path('app_post_edit', {'id': post.id}) }}" class="text-blue-600 hover:text-blue-500 mr-2">Modifier</a>
									<a href="{{ path('app_post_delete', {'id': post.id}) }}" class="text-red-600 hover:text-red-500" onclick="return confirm('Voulez-vous vraiment supprimer cette publication ?')">Supprimer</a>
								</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="4" class="px-6 py-4 whitespace-nowrap">Aucune publication trouv√©e.</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
{% endblock %}
