{{ form_start(form) }}
    <div class="space-y-4">
        <div>
            <label for="{{ form.content.vars.id }}" class="block text-gray-700">{{ form.content.vars.label }}</label>
            {{ form_widget(form.content, { 'attr': { 'class': 'w-full border border-gray-300 py-2 px-3 rounded focus:outline-none focus:border-blue-500' } }) }}
        </div>
    </div>
    <button type="submit" class="bg-blue-600 text-white font-semibold py-2 px-4 rounded hover:bg-blue-500 mt-4">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}
