<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link rel="stylesheet" href="{{ asset('assets/css/style.css')}}">
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}
		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	<body>
		{% if app.user %}
			<header>
				<nav class="navbar">
					<h2>CircleSync</h2>
					<ul class="navbar-nav">
						<li class="nav-item">
							<a href="{{ path('app_home') }}" class="nav-link">Accueil</a>
						</li>

						<li class="nav-item">
							<a href="{{ path('app_logout') }}" class="nav-link">Se déconnecter</a>
						</li>
					</ul>
					<h3>Bienvenu
						{{ app.user.lastname }}</h3>
				</nav>
			</header>

			<div class="page-container">
				<aside class="sidebar">
					<h3>Mes groupes</h3>
					<ul>
						{% for group in groups %}
							<li>
								<a href="{{ path('app_home', {'id': group.id}) }}">{{ group.name }}</a>
							</li>
						{% endfor %}
					</ul>
					<a href="{{ path('app_home') }}" class="btn-create-group">Créer un groupe</a>
				</aside>

				<main class="main-content"> {% block body %}{% endblock %}
					</main>
				</div>
			{% endif %}
		</body>
	</html>
